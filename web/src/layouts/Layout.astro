---
import { SEO, type TwitterCardType } from "astro-seo"
import {seoConfig} from "@/lib/seo"

interface Props {
	title: string;
	ogTitle?: string
	description?: string
  	/** Image thumbnail for the page. */
	image?: {
		url: string
		alt: string
	}
  disableIndexing?: boolean
}

const {description, disableIndexing, image, ogTitle, title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
    <SEO
			title={title}
			description={seoConfig.description || description}
			noindex={disableIndexing}
			nofollow={disableIndexing}
			openGraph={{
				basic: {
					title: ogTitle || title,
					type: "website",
					image: image?.url || seoConfig.image.url
				},
				image: {
					width: seoConfig.image.width,
					height: seoConfig.image.height,
					alt: image?.alt || seoConfig.image.alt
				},
				optional: {
					siteName: seoConfig.siteName,
					description: description || seoConfig.description
				}
			}}
			twitter={{
				card: seoConfig.twitter.card as TwitterCardType,
			}}
    />

		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/images/dildash-128.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

  main {
    display:flex;
    align-items: center;
    flex-direction: column;
    width: 100%;
    height: 100vh;
    gap: 1rem;
    justify-content: center;
  }
</style>
